            <button onclick="showOptions('Year')" class="dropbtn">Dropdown</button>
            <div id="Year" class="dropdown-content">
                <input type="text" placeholder="Search.." id="Input-Year" onkeyup="filterFunction('Year')">
                <a href="#about">About</a>

            </div>
