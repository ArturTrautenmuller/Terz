    .checked {
        color: orange;
    }
</style>


<div id="header">
    <div id="Avaliation" style="float:left;">
        @if (Model.Report.Avaliacoes.Count > 0)
        {
            int i = 1;
            while (i <= Model.Report.Avaliacoes.Select(a => a.Nota).Average())
            {
                <span class="fa fa-star checked"></span>
                i++;
            }

            while (i <= 5)
            {
                <span class="fa fa-star"></span>
                i++;
            }
        }

        else
        {
            <label>Não Avaliado</label>
        }

        <a href="#" onclick="AvaliatePage()">Avaliar</a>
    </div>
    <div id="Pages">
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                Paginas
                <span class="caret"></span>
            </button>
            <ul id="sheetList" class="dropdown-menu"></ul>
        </div>
    </div>
</div>
